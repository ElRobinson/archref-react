{
  "compilerOptions": {    
    "lib": ["dom","DOM.Iterable","ESNext"],                                  
    "allowJs": true, 
    "jsx": "react-jsx",                         
    "noEmit": true,                         
    "strict": true,                               
    "moduleResolution": "node",    
    "resolveJsonModule": true, 
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,                       
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"]
}
